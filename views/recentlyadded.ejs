<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recently Added Courses</title>
    <link rel="stylesheet" href="/css/maincourses.css">
</head>
<body>
    <header>
        <input type="checkbox" id="menu-toggle">
        <label for="menu-toggle" class="menu-icon">&#9776;</label>
        <div class="menu">
            <form action="/search" method="get">
                <input type="text" name="query" class="Search" placeholder="Search">
                <button type="submit">Search</button>
            </form>
            <a href="signup.html" class="signup">Sign Up</a>
            <a href="login.html" class="login">Log In</a>
            <hr>
            <div class="categories">
                <p>Categories:</p>
                <ul>
                    <li><a href="Business.html">Business</a></li>
                    <li><a href="development.html">Development</a></li>
                    <li><a href="IT.html">IT & Software</a></li>
                    <li><a href="design.html">Design</a></li>
                    <li><a href="markting.html">Marketing</a></li>
                </ul>
            </div>
        </div>
        <a href="index.html" class="logo">LearnHub</a>
        <nav class="navigation">
            <a href="login.html">Log In</a>
            <a href="signup.html">Sign Up</a>
        </nav>
    </header>
    <div class="topnav">
        <h2>Recently Added Courses</h2>
    </div>
    <div class="container">
        <% if (courses.length > 0) { %>
            <% courses.forEach(course => { %>
                <div class="course">
                    <h2><%= course.courseName %></h2>
                    <img src="<%= course.pictureLink %>" alt="<%= course.courseName %> Course Image">
                    <p><%= course.description %></p>
                    <a href="coursepage/<%= course._id %>">Learn More</a>
                </div>
            <% }); %>
        <% } else { %>
            <p>No courses found.</p>
        <% } %>
    </div>
    <div class="end-section">
        <div class="contact-info">
            <h2>Contact Us</h2>
            <p>Email: learnhub@gmail.com</p>
            <p>Phone: +2 100 565 8748</p>
            <a href="#about" class="about">About Us</a>
        </div>
    </div>
</body>
</html>
